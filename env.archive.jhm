{
  "tools": {
    "c": "gcc",
    "c++": "g++",
    "link": "g++"
  },
  "options": {
    "c++": [
      "-std=c++1y",
      "-pthread",
      "-Wall",
      "-Wextra",
      "-flto",
      "-O3"
    ],
    "link": {
      "+flags": [
        "-static",
        "-Wl,--whole-archive",
        "-lpthread",
        "-Wl,--no-whole-archive"
      ]
    }
  }
}