{
  "tools": {
    "c": "clang",
    "c++": "clang++",
    "link": "clang++"
  },
  "targets": [
      "jhm/jhm",
      "jhm/make_dep_file",
    ],
  "options": {
    "c++" : [
      "-std=c++1y",
      "-Wall",
      "-Werror",
      "-Wextra",
      "-Wold-style-cast",
      "-Wglobal-constructors",
      "-pthread",
      "-fcolor-diagnostics",
      "-DTEST_OUTPUT_DIR=\"/tmp/\"",
    ],
    "link": {
      "flags": [
        "-pthread"
      ],
      "libs": []
    }
  }
}
