{
  "mixins": [
    "c++14",
    "color_diagnostics",
    "most_warnings"
  ],
  "targets": [
      "jhm/jhm",
      "bit/bit"
    ],
  "options": {
    "c++" : [
      "-std=c++14",
      "-Wall",
      "-Werror",
      "-Wextra",
      "-Wold-style-cast",
      "-Wglobal-constructors",
      "-pthread",
      "-fcolor-diagnostics"
    ],
    "link": {
      "libs": ["-pthread"]
    }
  }
}
