{
  "test": {
    "build_with_default_targets": true,
    "excluded": [
      ".git"
    ]
  },
  "options": {
    "+c++": [
      "-O3",
      "-DNDEBUG",
      "-march=native",
      "-mtune=native",
      "-Wno-unused",
      "-Wno-unused-parameter",
      "-Wno-unused-result",
      "-flto"
    ],
    "link": {
      "+flags": [
        "-O3",
        "-flto",
        "-fuse-ld=gold",
        "-march=native",
        "-mtune=native"
      ]
    }
  }
}
