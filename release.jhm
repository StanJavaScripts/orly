{
  "test": {
    "build_with_default_targets": true,
    "excluded": [
      ".git"
    ]
  },
  "cmd": {
    "+g++" : [
      "-U_FORTIFY_SOURCE",
      "-O3",
      "-g1",
      "-DNDEBUG",
      "-flto",
      "-Wno-unused",
      "-Wno-unused-parameter",
      "-Wno-unused-result"
    ],
    "ld": {
      "+flags": [
        "-O3",
        "-flto"
      ]
    }
  }
}